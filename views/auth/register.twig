{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-6 offset-4">
            <h1>Regsiter</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-6">
            <form action="{{ route('auth.register') }}" method="post">
                <input type="hidden" name="{{ csrf.key }}" value="{{ csrf.token }}">

                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="text" name="email" id="email" placeholder="e.g. email@email.com" class="form-control{{ errors.email ? ' is-invalid' : '' }}" value="{{ old.email }}">

                    {% if errors.email %}
                        <div class="invalid-feedback">
                            {{ errors.email | first }}
                        </div>
                    {% endif %}
                </div>

                <div class="form-group">
                    <label for="email">Name</label>
                    <input type="text" name="name" id="name" placeholder="e.g. Flavius Mosneagu" class="form-control{{ errors.name ? ' is-invalid' : '' }}" value="{{ old.name }}">

                    {% if errors.name %}
                        <div class="invalid-feedback">
                            {{ errors.name | first }}
                        </div>
                    {% endif %}
                </div>    

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control{{ errors.password ? ' is-invalid' : '' }}">

                    {% if errors.password %}
                        <div class="invalid-feedback">
                            {{ errors.password | first }}
                        </div>
                    {% endif %}
                </div>

                <div class="form-group">
                    <label for="password">Password confirmation</label>
                    <input type="password" name="password_confirmation" id="password_confirmation" class="form-control{{ errors.password_confirmation ? ' is-invalid' : '' }}">

                    {% if errors.password_confirmation %}
                        <div class="invalid-feedback">
                            {{ errors.password_confirmation | first }}
                        </div>
                    {% endif %}
                </div>

                <button type="submit" class="btn btn-primary mt-3">Create account</button>
            </form>
        </div>
    </div>
{% endblock content %}
